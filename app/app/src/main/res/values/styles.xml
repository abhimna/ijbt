<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		 


        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:popupMenuStyle">@style/AndroidSRC.PopupMenu</item>
        <item name="android:itemTextAppearance">@style/AndroidSRC.TextAppearance</item>
    </style>

    <style name="ToolbarBackground">
        <item name="android:background">#83c3fb</item>
    </style>

    <style name="RecordThemeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:padding">2dip</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:layout_marginLeft">10dip</item>
    </style>

    <style name="textview_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="blue_textview_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/back_color</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/back_color</item>
        <item name="android:textColorHint">@color/back_color</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AndroidSRC.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#21B6A8</item>
    </style>

    <style name="AndroidSRC.TextAppearance" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>