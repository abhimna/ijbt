            android:layout_height="60dp"
            android:layout_margin="5.0dip"
            android:src="@drawable/follower_add_frnd"
            android:textColor="@color/default_text"
            android:textSize="13.0dip" />
    </LinearLayout>

    <TextView
        android:id="@id/tv_username"
