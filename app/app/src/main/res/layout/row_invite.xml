        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/iv_profile"
        android:text="john"
        android:textColor="@color/themecolor"
        android:textSize="16.0dip" />

</RelativeLayout>